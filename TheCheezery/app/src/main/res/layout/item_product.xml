<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_image"
        android:src="@drawable/americano"></ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@string/condensed"
            android:textSize="20sp"
            android:id="@+id/product_name"
            android:text="Ejemplo titulo"></TextView>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/dustyBlack"
            android:fontFamily="@string/light"
            android:text="lorem ipsums"
            android:id="@+id/product_description"
            android:textSize="10sp"
            ></TextView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/anotherPurple"
        android:textSize="19sp"
        android:textStyle="bold"
        android:text="$7"
        android:layout_gravity="center_vertical"
        android:id="@+id/product_price"
        android:layout_marginLeft="20dp"
        ></TextView>

</LinearLayout>